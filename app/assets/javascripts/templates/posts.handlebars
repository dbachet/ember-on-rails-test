<h1>Posts</h1>

<div>
  <h2>New Post</h2>
  <div {{bind-attr class="errors.title:error"}}>
    {{input type="text" placeholder="Title?" value=newTitle}}
    {{#if errors.title}}
      {{errors.title}}
    {{/if}}
  </div>

  <div {{bind-attr class="errors.body:error"}}>
    {{input type="text" placeholder="Body?" value=newBody}}
    {{#if errors.body}}
      {{errors.body}}
    {{/if}}
  </div>

  <button {{action createPost}}>Save new Post</button>
</div>

<ul>
  {{#each}}
    {{#if id}}
      <li>
        {{#linkTo "post" this}}
          {{title}}
        {{/linkTo}}
      </li>
    {{/if}}
  {{else}}
    <li>
      There are no posts.
    </li>
  {{/each}}
</ul>

{{outlet}}